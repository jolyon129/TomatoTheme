// Give browser a default height
html, body
  height 100%

body

.container
  position relative
  min-height 100%
  width 100%
  background-color transparent
  clearfix()
  .main-container
    clearfix()
    position relative
    min-height 100%
    width 100%


.sidebar
  position fixed
  min-height 100%
  width $navbar-desktop
  background-color $orange
  z-index $zindex-5

.aside
  position fixed
  border-right 1px solid #d9d9d9
  background-color $gainsboro
  height 100%
  width 30%
  padding-left $navbar-desktop
  float left
  box-sizing border-box
  box-shadow -1px 1px 6px rgba(0,0,0,0.35)

.main-wrapper
  clearfix()
  float left
  background-color $main-wrapper-color
  min-height 100%
  width 70%
  box-sizing border-box
  z-index $zindex-1
  margin-left 30%
  margin-bottom 30px

.mb-headbar
  display none


// Mobile
//----------------------------------
@media $mq-mobile
  .sidebar
    display none

@media $mq-mobile
  html body
    background-color $gainsboro

@media $mq-mobile
  .aside
    position static
    float none
    width 100%
    height 400px
    border 0
    padding 0
    box-shadow none
    border-bottom 1px solid #d9d9d9

@media $mq-mobile
  .main-wrapper
    width 100%
    height 100%
    padding 20px 5%
    margin-left 0
    margin-bottom 0
    position relative

@media $mq-mobile
  .mb-headbar
    display block
    width 100%
    height 45px
    background-color $gainsboro
    border-bottom 1px solid #d9d9d9

@media $mq-mobile
   .headbar-menu
     vertical-align middle
     a
       background-color $orange
       padding 10px
       vertical-align middle
       font-size $font-size-larger
       color $whitesmoke
       line-height 45px
     & :hover
       color