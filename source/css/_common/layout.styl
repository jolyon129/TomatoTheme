// Give browser a default height
html, body
  height 100%

body
  .container
    position relative
    min-height 100%
    width 100%
    background-color transparent
    clearfix()
    .main-container
      clearfix()
      position relative
      min-height 100%
      width 100%


.sidebar
  position fixed
  min-height 100%
  width $navbar-desktop
  background-color $orange
  z-index $zindex-5

.aside
  position fixed
  border-right 1px solid #d9d9d9
  background-color $gainsboro
  height 100%
  overflow hidden
  //width 370px
  width 30%
  padding-left $navbar-desktop
  //min-width 300px
  box-sizing border-box

.main-wrapper
  clearfix()
  background-color $main-wrapper-color
  min-height 100%
  width 70%
  //margin-left 370px
  margin-left 30%
  padding 0 5px
  box-sizing border-box
  z-index $zindex-1
  margin-bottom 30px

.mb-headbar
  display none

#_tabnav
  display none

// Mobile
//----------------------------------
@media $mq-mobile
  .sidebar
    display none
  #_tabnav
    height 10px
    margin-top 10px
    display block

@media $mq-mobile
  html body
    background-color $whitesmoke

@media $mq-mobile
  .main-container
    padding-top 40px
    .aside
      position static
      float none
      width 100%
      height auto
      border 0
      padding 40px 40px
      box-shadow none
      border-bottom 1px solid #d9d9d9

@media $mq-mobile
  .main-wrapper
    width 100%
    height 100%
    padding 20px 5%
    margin-left 0
    margin-bottom 0
    position relative

@media $mq-mobile
  .mb-headbar
    display block
    position fixed
    z-index $zindex-3
    width 100%
    height 45px
    background-color $gainsboro
    border-bottom 1px solid #d9d9d9

@media $mq-mobile
   .headbar-menu
     vertical-align middle
     a
       background-color $orange
       padding 10px
       vertical-align middle
       font-size $font-size-larger
       color $whitesmoke
       line-height 45px
     & :hover
       color
