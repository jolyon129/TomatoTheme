// Give browser a default height
html, body
  height 100%

.container
  position relative
  height 100%
  width 100%
  background-color white
  clearfix()
  .main-container
    position relative
    height 100%
    width 100%


.sidebar
  position fixed
  min-height 100%
  width $navbar-desktop
  background-color $orange
  z-index $zindex-5

.aside
  border-right 1px solid #d9d9d9
  background-color $gainsboro
  height 100%
  width 30%
  padding-left $navbar-desktop
  float left
  box-sizing border-box
  box-shadow -1px 1px 6px rgba(0,0,0,0.35)

.main-wrapper
  float left
  background-color $whitesmoke
  height 100%
  width 70%
  box-sizing border-box
  z-index $zindex-1




// Mobile
//----------------------------------
@media $mq-mobile
  .sidebar
    display none

@media $mq-mobile
  html body
    background-color $gainsboro

@media $mq-mobile
  .aside
    float none
    width 100%
    height 50%
    border 0
    padding 0
    box-shadow none
    border-bottom 1px solid #d9d9d9

@media $mq-mobile
  .main-wrapper
    width 100%
    height 100%
